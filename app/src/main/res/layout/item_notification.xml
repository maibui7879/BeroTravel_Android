<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <View
            android:id="@+id/view_icon_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light_teal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_notif_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bell"
            app:tint="#008080"
            app:layout_constraintStart_toStartOf="@id/view_icon_bg"
            app:layout_constraintEnd_toEndOf="@id/view_icon_bg"
            app:layout_constraintTop_toTopOf="@id/view_icon_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_icon_bg"/>

        <TextView
            android:id="@+id/tv_notification_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Bạn có một đặt chỗ mới tại Khách sạn Mường Thanh"
            android:textSize="15sp"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/view_icon_bg"
            app:layout_constraintEnd_toStartOf="@id/iv_unread_dot"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2 phút trước"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintStart_toStartOf="@id/tv_notification_message"
            app:layout_constraintTop_toBottomOf="@id/tv_notification_message" />

        <ImageView
            android:id="@+id/iv_unread_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bg_circle_green_dark"
            app:layout_constraintTop_toTopOf="@id/tv_notification_message"
            app:layout_constraintBottom_toBottomOf="@id/tv_notification_message"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>