<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa hồ sơ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/ivEditCover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/background"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/set_icon"
                app:tint="#FFFFFF"
                android:padding="8dp"
                android:background="#80000000"
                app:layout_constraintBottom_toBottomOf="@id/ivEditCover"
                app:layout_constraintEnd_toEndOf="@id/ivEditCover"
                android:layout_margin="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/ivEditCover"
                app:layout_constraintBottom_toBottomOf="@id/ivEditCover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivEditAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/account_icon"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/set_icon"
                    app:tint="#FFFFFF"
                    android:padding="30dp"
                    android:background="#60000000"
                    android:scaleType="centerInside"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etEditName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded_10"
                android:paddingHorizontal="16dp"
                android:hint="Nhập tên của bạn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới thiệu (Bio)"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etEditBio"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_input_rounded_10"
                android:padding="16dp"
                android:gravity="top"
                android:hint="Viết gì đó về bản thân..."/>

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:text="Lưu thay đổi"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#336749"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>