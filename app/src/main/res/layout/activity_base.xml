<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/img_top_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_top"
        android:contentDescription="Top Background" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        android:background="@android:color/transparent">

        <FrameLayout
            android:id="@+id/base_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/navbar_bg"
        android:elevation="12dp"
        android:paddingHorizontal="4dp">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_icon"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_map"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/map_icon"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bản đồ"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_itinerary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_itinerary"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_itinerary"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_itinerary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hành trình"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_booking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_booking"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_booking"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_notifications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account_icon"
                app:tint="@color/nav_default" />
            <TextView
                android:id="@+id/text_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="10sp"
                android:textColor="@color/nav_default"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:elevation="20dp"
        android:indeterminateTint="@color/teal_700" />
</RelativeLayout>