<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm địa điểm vào hành trình"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_rounded_gray"
        android:hint="Nhập tên địa điểm (VD: Hồ Gươm...)"
        android:paddingHorizontal="12dp"
        android:drawableStart="@drawable/ic_search_gray"
        android:drawablePadding="8dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tv_radius_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bán kính tìm kiếm: 5 km"
        android:textColor="#757575"
        android:textSize="12sp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="1"
        android:valueTo="50"
        android:stepSize="1"
        android:value="5"/>

    <Button
        android:id="@+id/btn_search_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"/>

</LinearLayout>