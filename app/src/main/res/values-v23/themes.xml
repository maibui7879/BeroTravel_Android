<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme chính -->
    <style name="Theme.BeroTravel20" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Không để background để không bị flash nền xanh -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Theme splash -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Nền splash custom -->
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- Fix Android 12+ hiển thị logo Android -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">
            @android:color/transparent
        </item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="31">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>
