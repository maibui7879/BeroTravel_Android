<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F4FFE5"/> </shape>
    </item>

    <item
        android:height="320dp"
        android:gravity="top"
        android:top="-50dp">
        <shape android:shape="oval">
            <solid android:color="#B2DFDB"/> </shape>
    </item>

    <item
        android:height="300dp"
        android:gravity="top"
        android:top="-90dp"
        android:left="-20dp"
        android:right="-20dp">
        <shape android:shape="oval">
            <solid android:color="#4DB6AC"/> </shape>
    </item>

    <item
        android:height="280dp"
        android:gravity="top"
        android:top="-150dp"
        android:left="-10dp"
        android:right="-10dp">
        <shape android:shape="oval">
            <solid android:color="#008E81"/> </shape>
    </item>

</layer-list>